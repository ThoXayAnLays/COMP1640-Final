<div class="bg-white d-flex align-items-center fixed-top shadow" style="min-height: 56px; z-index: 999">
    <div class="container-fluid">
        <div class="row align-items-center">
            <!-- search -->
            <div class="col d-flex align-items-center">

                <i class="fab fa-empire text-primary" style="font-size: 3rem"></i>

                <div class="input-group ms-2" type="button">


                    <form action="/staff/search" style="margin-top: 6px;">
                        <span class="input-group-prepend d-none d-lg-block" id="searchMenu">
                            <div class="input-group-text bg-gray border-0 rounded-pill"
                                style="min-height: 40px; min-width: 230px">
                                <input type="text" value="{{search}}" name="search_idea" class="form-control"
                                    placeholder="Search ideas..."
                                    style="width: 90%; height: 30px; border: 1px solid #f0f2f5; background-color: #f0f2f5">
                                <button style="border: 1px solid #f0f2f5; background-color: #f0f2f5; margin-left: 4px;"
                                    type="submit"><i class="fas fa-search me-2 text-muted"></i></button>
                            </div>
                        </span>
                    </form>
                </div>
            </div>
            <!-- nav -->
            <div class="col d-none d-xl-flex justify-content-center">
                <!-- home -->
                <div class="mx-4 nav__btn nav__btn-active">
                    
                     <a href="/staff"><i class="fas fa-home text-muted fs-4"></i></a>
                   
                </div>
                <!-- market -->
                <div class="mx-4 nav__btn">
                    
                    <a href="/staff/my_post"><i class="fas fa-user-alt text-muted fs-4"></i></a>
                    
                </div>

            </div>
            <!-- menus -->
            <div class="col d-flex align-items-center justify-content-end">
                <!-- avatar -->
                <div class="align-items-center justify-content-center d-none d-xl-flex">
                    <img src="{{user.imgURL}}" class="rounded-circle me-2" alt="avatar"
                        style="width: 38px; height: 38px; object-fit: cover" />
                    <p class="m-0">{{user.name}}</p>
                </div>
 

                <div class="rounded-circle p-1 bg-gray d-flex align-items-center justify-content-center mx-2"
                    style="width: 38px; height: 38px" type="button" type="button" data-bs-toggle="modal"
                    data-bs-target="#singleChat1">
                    <i class="fas fa-comment"></i>
                </div>
                <!-- notifications -->
                <div class="rounded-circle p-1 bg-gray d-flex align-items-center justify-content-center mx-2"
                    style="width: 38px; height: 38px" type="button" id="notMenu" data-bs-toggle="dropdown"
                    aria-expanded="false" data-bs-auto-close="outside">
                    <i class="fas fa-bell"></i>
                </div>
                <!-- notifications dd -->
                <ul class="dropdown-menu border-0 shadow p-3" aria-labelledby="notMenu"
                    style="width: 23em; max-height: 600px; overflow-y: auto">
                    <!-- header -->
                    <li class="p-1">
                        <div class="d-flex justify-content-between">
                            <h2>Notifications</h2>

                        </div>
                    </li>
                    <!-- news -->
                    <div class="d-flex justify-content-between mx-2">
                        <h5>New</h5>
                    </div>
                    <!-- news 1 -->
                    <li class="my-2 p-1">
                        <a href="#"
                            class="d-flex align-items-center justify-content-evenly text-decoration-none text-dark">
                            <div class="d-flex align-items-center justify-content-evenly">
                                <div class="p-2">
                                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ6jGlb3PnS6WJIXm5G4VSmQAiZjVCkCecPbzTAL_bgCAGegBjAi3qUECDbxuIp2ANPev8&usqp=CAU"
                                        alt="avatar" class="rounded-circle"
                                        style="width: 58px; height: 58px; object-fit: cover" />
                                </div>
                                <div>
                                    <p class="fs-7 m-0">
                                        DQH has just posted a new idea
                                    </p>
                                    <span class="fs-7 text-primary">about an hour ago</span>
                                </div>
                            </div>
                            <i class="fas fa-circle fs-7 text-primary"></i>
                        </a>
                    </li>

                </ul>
                <!-- secondary menu -->
                <div class="rounded-circle p-1 bg-gray d-flex align-items-center justify-content-center mx-2"
                    style="width: 38px; height: 38px" type="button" id="secondMenu" data-bs-toggle="dropdown"
                    aria-expanded="false" data-bs-auto-close="outside">
                    <i class="fas fa-caret-down"></i>
                </div>
                <!-- secondary menu dd -->
                <ul class="dropdown-menu border-0 shadow p-3" aria-labelledby="secondMenu" style="width: 19em">
                    <!-- avatar -->
                    <li class="dropdown-item p-1 rounded d-flex" type="button">
                        <img src="{{user.imgURL}}" alt="avatar" class="rounded-circle me-2"
                            style="width: 45px; height: 45px; object-fit: cover" />
                        <div>
                            <p class="m-0">{{user.name}}</p>
                            <p class="m-0 text-muted">{{user.username}}</p>
                        </div>
                    </li>


                    <hr />
                    <a href="/user/profile" style="text-decoration: none; color:black">
                        <li class="dropdown-item p-1 my-3 rounded" type="button">
                            <ul class="navbar-nav">

                                <li class="nav-item">
                                    <div class="d-flex">
                                        <i class="fa fa-user bg-gray p-2 rounded-circle"></i>

                                        <div class="ms-3 d-flex justify-content-between align-items-center w-100">
                                            <p class="m-0">User Profile</p>

                                            <i class="fas fa-chevron-right"></i>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </a>

                    <a href="/user/change_password" style="text-decoration: none; color:black">
                        <li class="dropdown-item p-1 my-3 rounded" type="button">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <div class="d-flex">
                                        <i class="fas fa-cog bg-gray p-2 rounded-circle"></i>

                                        <div class="ms-3 d-flex justify-content-between align-items-center w-100">
                                            <p class="m-0">Reset Password</p>
                                            <i class="fas fa-chevron-right"></i>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </a>
                    <!-- 4 -->
                    <li class="dropdown-item p-1 my-3 rounded" type="button">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="/auth/logout" class="d-flex text-decoration-none text-dark">
                                    <i class="fas fa-sign-out-alt bg-gray p-2 rounded-circle"></i>
                                    <div class="ms-3 d-flex justify-content-between align-items-center w-100">
                                        <p class="m-0">Log Out</p>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <!-- end -->
            </div>
        </div>
    </div>
</div>