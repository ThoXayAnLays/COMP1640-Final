                                    <i class="text-primary fas fa-thumbs-up"></i>
                                </div>
                                <span></span>
                                <p class="likecount m-0 text-muted fs-7 ml-3">{{this.like}}</p>
                                <div class="ms-2 me-2">
                                    <i class="text-danger fas fa-thumbs-down ml-6"></i>
                                </div>
                                <p class="dislike-count m-0 text-muted fs-7 ml-3">{{this.dislike}}</p>
